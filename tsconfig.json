{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node"
    ],
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/**.ts",
    "src/**/**/*.ts",
    "src/utils/utils.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
